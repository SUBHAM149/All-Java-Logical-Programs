package com.sub.copy_constructor;

public class CopyConstructorDemo3 {


	public static void main(String[] args) {
		Driver driver=new Driver("John",28);
		
		Car c1=new Car("Naxon",2026,"EV",driver);
		IO.println("First Object: "+c1);
		
		Car c2=new Car(c1);
		c2.changeDriver(new Driver("Alen",30));
		IO.println("Second Car Object: "+c2);
		
	}

}

class Driver
{
	private String name;
	private int age;
	
	public Driver(String name, int age) {
		super();
		this.name = name;
		this.age = age;
	}

	@Override
	public String toString() {
		return "Driver [name=" + name + ", age=" + age + "]";
	}
	
}

class Car
{
	private String name;
	private int model;
	private String engineType;
	private Driver driver;
	
	public Car(String name, int model, String engineType, Driver driver) {
		super();
		this.name = name;
		this.model = model;
		this.engineType = engineType;
		this.driver = driver;
	}
	public Car(Car car)
	{
		this.name=car.name;
		this.model=car.model;
		this.engineType=car.engineType;
		this.driver=car.driver;
	}
	public void changeDriver(Driver driver)
	{
		this.driver=driver;
	}
	@Override
	public String toString() {
		return "Car [name=" + name + ", model=" + model + ", engineType=" + engineType + ", driver=" + driver + "]";
	}	
	
}
